@using System.Security.Claims;
@using aadcapi.Utils;
@if (Request.IsAuthenticated)
{
    ClaimsPrincipal cp = User as ClaimsPrincipal;
    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hello " + cp.FindFirst(Globals.NameClaimType).Value, "", "Me", routeValues: null, htmlAttributes: new { title = "My Claims" })
        </li>
        <li>
            @Html.ActionLink("Sign out", "SignOut", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
        </li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Sign in", "SignIn", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
        </li>
    </ul>
}

